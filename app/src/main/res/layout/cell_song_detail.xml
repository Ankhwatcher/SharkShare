<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/cell_width"
    android:layout_height="@dimen/cell_height"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="2dp">

    <ImageView
        android:id="@+id/ivAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/album_circle"
        tools:tint="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/ivAlbum"
        android:layout_alignLeft="@id/ivAlbum"
        android:layout_alignRight="@id/ivAlbum"
        android:layout_alignStart="@id/ivAlbum"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        tools:text="Chuck Berry" />

    <ImageView
        android:id="@+id/ivAlbumHole"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerInParent="true"
        android:src="@drawable/album_hole" />

    <TextView
        android:id="@+id/tvSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/ivAlbum"
        android:layout_alignLeft="@id/ivAlbum"
        android:layout_alignRight="@id/ivAlbum"
        android:layout_alignStart="@id/ivAlbum"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="Johnny B. Goode (1957 Acoustic Version Radio Edit" />

    <TextView
        android:id="@+id/tvAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceSmall"
        tools:text="Roll Over Beethoven" />


</RelativeLayout>