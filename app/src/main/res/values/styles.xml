<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dialog_background</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:textAppearanceLarge">@style/AppTheme.TextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/AppTheme.TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/AppTheme.TextAppearance.Small</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="AppTheme.TextAppearance" parent="android:TextAppearance.Holo">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="AppTheme.TextAppearance.Large">
        <item name="android:textSize">14sp</item>

    </style>

    <style name="AppTheme.TextAppearance.Medium">
        <item name="android:textSize">18sp</item>

    </style>

    <style name="AppTheme.TextAppearance.Small">
        <item name="android:textSize">10sp</item>
    </style>

</resources>
